<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zwj.demo.mapper.CommentMapper">

	<select id="findCommentPage" resultMap="CommentMap">
		select  sys_comment.*,sys_news.title,sys_user.* from sys_comment
		inner join sys_news
		inner join sys_user
		on sys_comment.userid=sys_user.id
		and sys_comment.newsid=sys_news.id
		<where>
			<if test="username != null and username != ''">
				and sys_news.title like concat('%',#{username},'%')
			</if>
		</where>
	</select>
	<resultMap id="CommentMap" type="com.zwj.demo.entity.Comment">
		<!--association关联属性 property属性名 javaType属性类型 column在多的一方的表中的列名-->
		<association property="news"  column="newsid" javaType="com.zwj.demo.entity.News" select="getNews"/>
		<association property="user"  column="userid" javaType="com.zwj.demo.entity.User" select="getUser"/>
	</resultMap>
	<select  resultType="com.zwj.demo.entity.News" id="getNews">
				select * from sys_news where id = #{id}
	</select>
	<select  resultType="com.zwj.demo.entity.User" id="getUser">
				select * from sys_user where id = #{id}
	</select>

	<select id="findCommentListAll" resultMap="CommentMap">
		select  sys_comment.*,sys_news.title,sys_user.* from sys_comment
		inner join sys_news
		inner join sys_user
		on sys_comment.userid=sys_user.id
		and sys_comment.newsid=sys_news.id
		<where>
			<if test="userid != null and userid != ''">
				and userid =#{userid}
			</if>
		</where>
	</select>
</mapper>